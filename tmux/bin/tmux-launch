set -e

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Colors for beautiful output
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

BLUE="\033[34m"
CYAN="\033[36m"
GREEN="\033[32m"
YELLOW="\033[33m"
MAGENTA="\033[35m"
RED="\033[31m"
BOLD="\033[1m"
RESET="\033[0m"

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Configuration
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

LAYOUTS_DIR="$HOME/.tmux-layouts"
PROJECT_DIR="${1:-$PWD}"

# å¦‚æœæœ‰å®‰è£ fzfï¼Œå¯ä»¥ç”¨ä¾†é¸æ“‡å°ˆæ¡ˆ
HAS_FZF=false
if command -v fzf &> /dev/null; then
    HAS_FZF=true
fi

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Helper Functions
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

print_header() {
    clear
    echo -e "${BLUE}${BOLD}"
    echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
    echo "â•‘                                                           â•‘"
    echo "â•‘          ğŸš€ Tmux AI Workspace Launcher ğŸ¤–                â•‘"
    echo "â•‘                                                           â•‘"
    echo "â•‘              Created for Frank Yang                       â•‘"
    echo "â•‘                                                           â•‘"
    echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    echo -e "${RESET}"
    echo ""
}

print_menu() {
    echo -e "${CYAN}${BOLD}é¸æ“‡å·¥ä½œç©ºé–“å¸ƒå±€ï¼š${RESET}"
    echo ""
    echo -e "  ${GREEN}1${RESET} â”‚ ${BOLD}AI Workspace${RESET} (ä¸»è¦å·¥ä½œæ¨¡å¼)"
    echo -e "    â”‚ â”œâ”€ Codex CLI (70%) + Claude Code (30%)"
    echo -e "    â”‚ â””â”€ Monitor pane ç”¨æ–¼æ¸¬è©¦/æ—¥èªŒ"
    echo ""
    echo -e "  ${GREEN}2${RESET} â”‚ ${BOLD}AI Compare${RESET} (æ¯”è¼ƒæ¨¡å¼)"
    echo -e "    â”‚ â”œâ”€ Codex vs Claude ä¸¦æ’æ¯”è¼ƒ (50/50)"
    echo -e "    â”‚ â””â”€ æ¯”è¼ƒå…©å€‹ AI çš„è¼¸å‡ºå“è³ª"
    echo ""
    echo -e "  ${GREEN}3${RESET} â”‚ ${BOLD}Full Focus${RESET} (å°ˆæ³¨æ¨¡å¼)"
    echo -e "    â”‚ â”œâ”€ å–®ä¸€ AI å…¨å± (100%)"
    echo -e "    â”‚ â””â”€ æ·±åº¦æ€è€ƒï¼Œæ¸›å°‘å¹²æ“¾"
    echo ""
    echo -e "  ${GREEN}4${RESET} â”‚ ${BOLD}Resume${RESET} (æ¢å¾©ä¸Šæ¬¡ session)"
    echo -e "    â”‚ â””â”€ åˆ—å‡ºä¸¦é¸æ“‡ç¾æœ‰ sessions"
    echo ""

    if [[ "$HAS_FZF" == true ]]; then
        echo -e "  ${GREEN}5${RESET} â”‚ ${BOLD}Project Selector${RESET} (å°ˆæ¡ˆé¸æ“‡å™¨)"
        echo -e "    â”‚ â””â”€ ä½¿ç”¨ fzf å¿«é€Ÿé¸æ“‡å°ˆæ¡ˆ"
        echo ""
    fi

    echo -e "  ${RED}q${RESET} â”‚ ${BOLD}Exit${RESET} (é›¢é–‹)"
    echo ""
    echo -e "${YELLOW}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${RESET}"
    echo -e "ğŸ“ ç•¶å‰å°ˆæ¡ˆç›®éŒ„: ${MAGENTA}$PROJECT_DIR${RESET}"
    echo -e "${YELLOW}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${RESET}"
    echo ""
}

list_sessions() {
    echo -e "${CYAN}${BOLD}ç¾æœ‰çš„ Tmux Sessionsï¼š${RESET}"
    echo ""

    if tmux list-sessions 2>/dev/null; then
        echo ""
        echo -e "${YELLOW}è¼¸å…¥ session åç¨±ä»¥é€£æ¥ï¼Œæˆ–æŒ‰ Enter è¿”å›${RESET}"
        read -p "> " session_name

        if [[ -n "$session_name" ]]; then
            if tmux has-session -t "$session_name" 2>/dev/null; then
                echo "ğŸ”— é€£æ¥åˆ° $session_name..."
                tmux attach-session -t "$session_name"
                exit 0
            else
                echo -e "${RED}âŒ Session '$session_name' ä¸å­˜åœ¨${RESET}"
                sleep 2
            fi
        fi
    else
        echo -e "${YELLOW}âš ï¸  ç›®å‰æ²’æœ‰åŸ·è¡Œä¸­çš„ sessions${RESET}"
        sleep 2
    fi
}

select_project_with_fzf() {
    echo -e "${CYAN}${BOLD}é¸æ“‡å°ˆæ¡ˆç›®éŒ„...${RESET}"
    echo ""

    # æœå°‹å¸¸è¦‹çš„å°ˆæ¡ˆç›®éŒ„
    SEARCH_DIRS=(
        "$HOME/Documents/GitHub"
        "$HOME/Projects"
        "$HOME/Developer"
        "$HOME/Code"
        "$HOME/Work"
    )

    PROJECTS=()
    for dir in "${SEARCH_DIRS[@]}"; do
        if [[ -d "$dir" ]]; then
            while IFS= read -r project; do
                PROJECTS+=("$project")
            done < <(find "$dir" -maxdepth 2 -type d -name ".git" -exec dirname {} \; 2>/dev/null)
        fi
    done

    if [[ ${#PROJECTS[@]} -eq 0 ]]; then
        echo -e "${YELLOW}âš ï¸  æ‰¾ä¸åˆ°ä»»ä½• git å°ˆæ¡ˆ${RESET}"
        sleep 2
        return
    fi

    # ä½¿ç”¨ fzf é¸æ“‡
    SELECTED=$(printf '%s\n' "${PROJECTS[@]}" | fzf --height=50% --border --prompt="é¸æ“‡å°ˆæ¡ˆ > " --preview="ls -la {}" --preview-window=right:50%)

    if [[ -n "$SELECTED" ]]; then
        PROJECT_DIR="$SELECTED"
        echo -e "${GREEN}âœ… å·²é¸æ“‡: $PROJECT_DIR${RESET}"
        sleep 1
    fi
}

launch_layout() {
    local layout=$1
    local script="$LAYOUTS_DIR/${layout}.sh"

    if [[ ! -f "$script" ]]; then
        echo -e "${RED}âŒ éŒ¯èª¤ï¼šæ‰¾ä¸åˆ°å¸ƒå±€è…³æœ¬ '$script'${RESET}"
        echo -e "${YELLOW}ğŸ’¡ è«‹ç¢ºèªå·²åŸ·è¡Œå®‰è£è…³æœ¬${RESET}"
        sleep 3
        return 1
    fi

    echo -e "${GREEN}ğŸš€ å•Ÿå‹• $layout...${RESET}"
    sleep 0.5

    bash "$script" "$PROJECT_DIR"
}

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Main Loop
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

while true; do
    print_header
    print_menu

    read -p "è«‹é¸æ“‡ [1-4/q]: " choice

    case $choice in
        1)
            launch_layout "ai-workspace"
            exit 0
            ;;
        2)
            launch_layout "ai-compare"
            exit 0
            ;;
        3)
            echo ""
            echo -e "${CYAN}é¸æ“‡ AI å·¥å…·ï¼š${RESET}"
            echo "  1) Codex CLI (é è¨­)"
            echo "  2) Claude Code"
            read -p "è«‹é¸æ“‡ [1/2]: " ai_choice

            case $ai_choice in
                2)
                    bash "$LAYOUTS_DIR/full-focus.sh" "$PROJECT_DIR" "claude"
                    ;;
                *)
                    bash "$LAYOUTS_DIR/full-focus.sh" "$PROJECT_DIR" "codex"
                    ;;
            esac
            exit 0
            ;;
        4)
            list_sessions
            ;;
        5)
            if [[ "$HAS_FZF" == true ]]; then
                select_project_with_fzf
            else
                echo -e "${RED}âŒ ç„¡æ•ˆé¸æ“‡${RESET}"
                sleep 1
            fi
            ;;
        q|Q)
            echo ""
            echo -e "${YELLOW}ğŸ‘‹ å†è¦‹ï¼${RESET}"
            exit 0
            ;;
        *)
            echo -e "${RED}âŒ ç„¡æ•ˆé¸æ“‡ï¼Œè«‹é‡è©¦${RESET}"
            sleep 1
            ;;
    esac
done
